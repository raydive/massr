{
  "name": "Massr",
  "buildpacks": [
	  {"url": "heroku/jvm"},
	  {"url": "heroku/ruby"}
  ],
  "addons": [
    "sendgrid",
    "memcachier",
    "mongolab"
  ],
  "env": {
    "TWITTER_CONSUMER_ID": {
      "required": true
    },
    "TWITTER_CONSUMER_SECRET": {
      "required": true
    },
    "TZ": "Asia/Tokyo",
    "LANG": "en_US.UTF-8",
    "RACK_ENV": "production"
  }
}
